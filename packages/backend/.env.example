NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# JSON file storage directory (relative to packages/backend or absolute)
DATA_DIR=./data

# CORS — frontend origin
CORS_ORIGIN=http://localhost:5173

# JWT — change the secret in production!
# JWT_SECRET=change-me-to-a-real-secret-in-production!!
# JWT_ACCESS_EXPIRES_IN=15m
# JWT_REFRESH_EXPIRES_IN=7d

# HTTPS — generate certs with: pnpm certs:generate
# Leave empty to run plain HTTP (recommended for prototyping)
# TLS_CERT_PATH=../../certs/localhost.pem
# TLS_KEY_PATH=../../certs/localhost-key.pem

# Telegram — public URL for webhook registration
# TELEGRAM_WEBHOOK_BASE_URL=https://yourdomain.com

# WhatsApp Business API
# WHATSAPP_WEBHOOK_BASE_URL=https://yourdomain.com

# Instagram / Facebook Messenger
# INSTAGRAM_WEBHOOK_BASE_URL=https://yourdomain.com
# INSTAGRAM_APP_SECRET=

# Novofon VoIP
# NOVOFON_WEBHOOK_BASE_URL=https://yourdomain.com

# Voximplant VoIP
# VOXIMPLANT_WEBHOOK_BASE_URL=https://yourdomain.com

# Media / file uploads
UPLOAD_DIR=./uploads

# Backups
BACKUP_DIR=./backups
BACKUP_CRON=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_ENABLED=true

# Rate limiting (defaults are relaxed for prototyping)
# RATE_LIMIT_GLOBAL_MAX=10000
# RATE_LIMIT_AUTH_MAX=1000
# RATE_LIMIT_API_MAX=10000

# Notifications
# NOTIFICATION_CRON=*/15 * * * *
# NOTIFICATION_CRON_ENABLED=true

# Email sync (stubbed out — deps removed for prototyping)
# EMAIL_SYNC_CRON=*/2 * * * *
# EMAIL_SYNC_ENABLED=true

# Web Push — VAPID keys (stubbed out — deps removed for prototyping)
# VAPID_PUBLIC_KEY=
# VAPID_PRIVATE_KEY=
# VAPID_SUBJECT=mailto:admin@crm.local

# Dev auth bypass — skip JWT and auto-inject a mock admin user
# Set to true to test API endpoints without logging in
# NEVER enable in production!
DEV_SKIP_AUTH=false
