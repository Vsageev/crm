NODE_ENV=development
PORT=3000
HOST=0.0.0.0

CORS_ORIGIN=http://localhost:5173

# HTTPS — generate certs with: pnpm certs:generate
# Leave empty to run plain HTTP
# TLS_CERT_PATH=../../certs/localhost.pem
# TLS_KEY_PATH=../../certs/localhost-key.pem

# Telegram — public URL for webhook registration (e.g. https://yourdomain.com)
# TELEGRAM_WEBHOOK_BASE_URL=https://yourdomain.com

# Backups
BACKUP_DIR=./backups
BACKUP_CRON=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_ENABLED=true

# Dev auth bypass — skip JWT and auto-inject a mock admin user (never enable in production)
DEV_SKIP_AUTH=false
